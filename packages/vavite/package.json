{
	"name": "vavite",
	"version": "1.2.0",
	"description": "A Vite plugin for develoing server-side applications",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"files": [
		"dist",
		"*.d.ts"
	],
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		},
		"./vite-dev-server": {
			"import": "./dist/vite-dev-server.mjs"
		},
		"./http-dev-server": {
			"import": "./dist/http-dev-server.mjs"
		}
	},
	"author": "Fatih Ayg√ºn <cyco130@gmail.com>",
	"repository": "https://github.com/cyco130/vavite",
	"license": "MIT",
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"prepack": "rm -rf dist && pnpm build",
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"lint:ts": "eslint . --max-warnings 0 --ignore-pattern dist"
	},
	"bin": {
		"vavite": "./cli.js"
	},
	"peerDependencies": {
		"vite": "^2.8.1"
	},
	"devDependencies": {
		"@cyco130/eslint-config": "^1.1.0",
		"@types/node": "^17.0.35",
		"eslint": "^8.16.0",
		"sirv": "^2.0.2",
		"tsup": "^5.12.8",
		"typescript": "^4.6.4",
		"vite": "^2.9.9"
	},
	"dependencies": {
		"@vavite/connect": "workspace:*",
		"@vavite/expose-vite-dev-server": "workspace:*",
		"@vavite/multibuild-cli": "workspace:*",
		"@vavite/reloader": "workspace:*"
	}
}
